{
  // Launch configurations for debugging STM32F429ZI Rust firmware with Cortex-Debug
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OpenOCD: Flash + Debug (flappy_bird_fresh)",
      "type": "cortex-debug",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/flappy_bird_fresh",
      "servertype": "openocd",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32f4x.cfg"
      ],
      "serverArgs": ["-c", "adapter speed 4000"],
      "preLaunchTask": "openocd: erase + flash binary (flappy_bird_fresh)",
      "gdbPath": "arm-none-eabi-gdb",
      "preLaunchCommands": [
        "set mem inaccessible-by-default off",
        "set remotetimeout 60"
      ],
      "postLaunchCommands": [
        "monitor reset halt",
        "load"
      ]
    },
    {
      "name": "OpenOCD: Debug Only (no flash)",
      "type": "cortex-debug",
      "request": "launch", 
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/flappy_bird_fresh",
      "servertype": "openocd",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32f4x.cfg"
      ],
      "serverArgs": ["-c", "adapter speed 4000"],
      "preLaunchTask": "build: debug (flappy_bird_fresh)",
      "gdbPath": "arm-none-eabi-gdb",
      "preLaunchCommands": [
        "set mem inaccessible-by-default off",
        "set remotetimeout 60"
      ],
      "postLaunchCommands": [
        "monitor reset halt"
      ]
    },
    {
      "name": "OpenOCD: Attach to Running Session",
      "type": "cortex-debug",
      "request": "attach",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/flappy_bird_fresh",
      "servertype": "external",
      "gdbTarget": "localhost:3333",
      "gdbPath": "arm-none-eabi-gdb",
      "postAttachCommands": [
        "set mem inaccessible-by-default off",
        "set remotetimeout 60",
        "monitor halt"
      ]
    }
  ]
}
